# Google AI API Key (required for README generation)
GOOGLE_API_KEY=your_google_api_key_here

# GitHub OAuth Configuration (required for repositories and history features)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
# IMPORTANT: Set this to match your GitHub OAuth app's callback URL
GITHUB_REDIRECT_URI=https://autodocai.vercel.app/auth/callback

# GitHub Database Configuration (for history storage - optional)
GITHUB_DATA_REPO_OWNER=your_github_username
GITHUB_DATA_REPO_NAME=autodoc-ai-data
GITHUB_DATA_TOKEN=your_personal_access_token

# Email Configuration for Contact Form & Error Notifications
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-gmail-app-password

# Error Notification Settings (optional - uses EMAIL_USER if not set)
# Email address where error notifications will be sent
ERROR_NOTIFICATION_EMAIL=your-notification@gmail.com

# Optional: Your website URL for confirmation emails
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# NOTE: For EMAIL_PASS, use Gmail App Password, not your regular password
# 1. Enable 2-Step Verification on your Gmail account
# 2. Go to Google Account settings > Security > 2-Step Verification > App passwords
# 3. Generate a 16-character app password and use that here
